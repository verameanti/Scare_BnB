<h1>All Hauntings</h1>
<div class="grid-content">
  <div class="hauntings-grid">
    <% @hauntings.each do |haunting| %>
    <div class="card mb-2">
      <% if haunting.ghost.photos.attached? %>
      <%= cl_image_tag(haunting.ghost.photos.first.key) %>
      <% else %>
      <%= cl_image_tag("https://res.cloudinary.com/dbe4hul9k/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1622714025/ghostbusters-logo_cqzclk.jpg") %>
      <% end %>
      <div class="card-body">
        <h2>Youâ€™re new haunting details: </h2>
        <p>Ghost: <%= haunting.ghost.name %></p>
        <p>Owner: <%= haunting.ghost.user.email %> </p>
        <div class="text-center mg-16px"> <%= link_to 'View this haunting', haunting_path(haunting), class: 'btn btn-nice'%> </div>
      </div>
      <% end %>
    </div>
  </div>
  <div id="map"
  style= "height: 100vh; width: 700px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" >
  </div>
</div>
