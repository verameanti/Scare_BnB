
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
          <h3>Add a new ghost:</h3>
          <%= simple_form_for(@ghost) do |g| %>
        <%= g.input :name %>
        <%= g.input :era, :collection => %w[Victorian Modern 1950s WW2 Romanintic Stuart 1920s Medieval Colonial] %>
        <%= g.input :category, :collection => %w[Scary Friendly Jovial Grumpy Mischevious]%>
        <%= g.input :description %>
        <%= g.input :price %>
        <%= g.input :photos, as: :file, input_html: { multiple: true } %>
        <%= g.submit class: 'btn btn-success' %>
      <% end %>
        </div>
      <%= link_to 'Go back', ghosts_path, class: 'btn btn-primary' %> </p>
    </div>
  </div>
</div>

